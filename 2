#include <iostream>
#include <cmath>
#include <iomanip>

using namespace std;

double calculateSeries(double x, int maxIterations, double tolerance) {
    double sum = 0.0;
    double term;
    int n = 1;
    do {
        term = x / (1.0 + pow(n, 4.0) * pow(x, 3.0));
        sum += term;
        n++;
    } while (abs(term) > tolerance && n <= maxIterations);  

    if (n > maxIterations) {
        cout << "Достигнуто максимальное число итераций." << endl;
    }

    return sum;
}

int main() {
    double x = 1;
    int maxIterations = 10;
    double tolerance = 2.7*(pow(10,-6));

    double result = calculateSeries(x, maxIterations, tolerance);

    cout << fixed << setprecision(10);
    cout << "Значение функционального ряда при x = " << x << " равно: " << result << endl;

    return 0;
}
