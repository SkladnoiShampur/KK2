def calculate_series(tolerance=1e-6):
  """
  Вычисляет сумму бесконечного ряда:  sum[n=1 до inf] 1 / (n * (n + 3))

  Args:
    tolerance: Желаемая точность вычислений (по умолчанию 1e-6).  
               Суммирование прекращается, когда абсолютное значение очередного члена
               становится меньше tolerance.

  Returns:
    Сумма ряда (приблизительное значение).
  """

  total_sum = 0.0
  n = 1
  term = 1.0  # Инициализируем значение term, чтобы войти в цикл while

  while abs(term) > tolerance:
    term = 1.0 / (n * (n + 3))
    total_sum += term
    n += 1

  return total_sum


if __name__ == "__main__":
  result = calculate_series()
  print(f"Приблизительная сумма ряда: {result}")
  # Аналитическое решение этого ряда 11/18 ≈ 0.611111...
  print(f"Аналитическое решение: 11/18 = {11/18}")
